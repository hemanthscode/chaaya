{
  "name": "chaya-api",
  "version": "1.0.0",
  "description": "Chaya Photography Portfolio - Backend API",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "prod": "NODE_ENV=production node server.js",
    "seed": "node scripts/seed.js",
    "seed:full": "npm run clear -- --force && npm run seed",
    "clear": "node scripts/clear.js",
    "reset": "npm run clear -- --force && npm run seed",
    "backup": "node scripts/backup.js",
    "backup:keep": "node scripts/backup.js --keep-all",
    "migrate": "node scripts/migrate.js",
    "migrate:check": "node scripts/migrate.js --dry-run",
    "db:status": "node scripts/status.js",
    "db:health": "curl -s http://localhost:5000/api/v1/health || echo 'Server down'",
    "setup": "npm run seed && npm run migrate",
    "reset:full": "npm run clear -- --force && npm run setup"
  },
  "keywords": [
    "photography",
    "portfolio",
    "api",
    "express",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.16",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.11",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
